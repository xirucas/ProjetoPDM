<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <corners android:radius="20dp"></corners>
            <solid android:color="@color/secondary_blue"></solid>
            <stroke android:color="#272B35" android:width="1dp"></stroke>

        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="300"
                android:startColor="#402D7BA6"
                android:endColor="@android:color/transparent"
                android:centerX="0.1"
                android:centerY="0.9"/>

            <corners android:radius="20dp"></corners>
            <stroke android:color="#272B35" android:width="1dp"></stroke>

        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="300"
                android:startColor="#1E2740"
                android:endColor="@android:color/transparent"
                android:centerX="0.9"
                android:centerY="0.2"/>

            <corners android:radius="20dp"></corners>
            <stroke android:color="#272B35" android:width="1dp"></stroke>
        </shape>
    </item>
</layer-list>